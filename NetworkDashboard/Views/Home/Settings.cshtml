@model NDDevicePoller.Data.CrossServiceSettings

@{
    ViewData["Title"] = "Settings";
}

<h1>Settings</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Settings">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID" />
            <div class="form-group">
                <label asp-for="PollInterval" class="control-label">Poll Interval (in Seconds):</label>
                <input asp-for="PollInterval" class="form-control" />
                <span asp-validation-for="PollInterval" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SNMPUsername" class="control-label"></label>
                <input asp-for="SNMPUsername" class="form-control" />
                <span asp-validation-for="SNMPUsername" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SNMPAuth" class="control-label"></label>
                @*@Html.PasswordFor(m=>m.SNMPAuth)*@
                <input asp-for="SNMPAuth" class="form-control" type="password" value=@Model.SNMPAuth />
                <span asp-validation-for="SNMPAuth" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SNMPPriv" class="control-label"></label>
                @*@Html.PasswordFor(m=>m.SNMPPriv)*@
                <input asp-for="SNMPPriv" class="form-control" type="password" value=@Model.SNMPPriv />
                <span asp-validation-for="SNMPPriv" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to Dashboard</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
